{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": ".",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "lib": [
      "DOM",
      "ES2020"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "devServer.mts",
    "telemetryClient.ts",
    "track.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}