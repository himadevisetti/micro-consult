// NOTE: Using Bundler mode here to avoid .js extension churn.
// See CONTRIBUTING.md for details before changing.
{
  "name": "frontend",
  "type": "module",
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false, // allow emit so JS files are generated
    "outDir": "./build", // compiled output goes into build/
    "allowJs": true,
    "incremental": true
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src",
    "*.mts",
    "start-server.ts" // explicitly include server entry point
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
    // ðŸ”¹ removed "build" from exclude so compiler can write into build/
  ]
}