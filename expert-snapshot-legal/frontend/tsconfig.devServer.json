{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "build",
    "rootDir": ".", // ensures devServer.mts compiles relative to project root
    "esModuleInterop": true,
    "skipLibCheck": true,
    "isolatedModules": false, // not needed unless using Babel or TS transformers
    "allowJs": true
  },
  "include": ["devServer.mts"],
  "exclude": ["node_modules", "build", "dist"]
}

