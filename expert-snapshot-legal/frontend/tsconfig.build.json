{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "build",
    "rootDir": ".",
    "moduleResolution": "Bundler",
    "module": "ESNext",
    "target": "ES2022",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false
  },
  "include": [
    "src",
    "start-server.ts",
    "**/*.mts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".next"
  ]
}