datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ExportLog {
  id           Int      @id @default(autoincrement())
  filename     String
  timestamp    DateTime @default(now())
  clientName   String
  retainerType String
  submittedBy String // user ID or email
  formVersion   String? // if schema evolves
  feeAmount     Float?  // optional, for audit
  jurisdiction  String? // optional, for filtering
  format String // e.g. 'pdf', 'html'
}
